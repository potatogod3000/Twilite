@model PostInfoModel

@{
    ViewData ["Title"] = "Create Post";
}

<h1 class="text-center display-4">@ViewData["Title"] <span class="text-primary">&#x40;@User.Identity.Name</span></h1>

<form method="post" class="row justify-content-center">
    <div class="card border-0">
        <div asp-validation-summary="All" class="text-danger"></div>
        @* <div class="my-2">
            <textarea asp-for="PostContent" class="form-control" id="create-post-area" rows="3" placeholder="Express your opinions here..." maxlength="450"></textarea>
        </div> *@
        <partial name="_RichEditor" />

        <div class="text-end mb-2">
            <button id="post-button" class="btn btn-primary" type="submit">Post</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
