@model PostInfoModel

@{
    ViewData ["Title"] = "Create Post";
}

<h1 class="text-center display-4">@ViewData["Title"] <span class="text-primary">&#x40;@User.Identity.Name</span></h1>

<form method="post" class="row justify-content-center">
    <div class="card border-0">

        <div asp-validation-summary="All" class="text-danger"></div>
        <textarea asp-for="PostContent" class="form-control border-0" id="post-area" rows="3" placeholder="Express your opinions here..." hidden></textarea>
        <partial name="_RichEditor" />
        
        <div class="text-end mb-2">
            <button id="post-button" class="btn btn-primary" type="submit">Post</button>
        </div>
    
    </div>
</form>

<script>
    button = document.getElementById("post-button");
    document.addEventListener("DOMContentLoaded", function() {
        postArea.innerHTML = hiddenPostArea.innerText;
    });
    button.addEventListener("click", onPost);
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
