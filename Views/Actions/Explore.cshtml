@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

@{
    ViewData["Title"] = "Explore";
    IEnumerable<PostInfoModel> Posts = ViewData["Posts"] as IEnumerable<PostInfoModel>;
}

<div class="text-center">
    @{
        if(SignInManager.IsSignedIn(User)) {
            <h1 class="display-4 mb-4">Welcome back, @User.Identity.Name!</h1>
        }
        else {
            <h1 class="display-4 mb-4">Explore Twilite</h1>
        }
    }
    
</div>

<partial name="_Notifications" />

<div class="container-fluid">
    <div id="posts-area" class="row justify-content-center">
        @await Component.InvokeAsync("Posts", Posts)
    </div>
</div>