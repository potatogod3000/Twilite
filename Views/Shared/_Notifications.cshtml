<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="position-fixed bottom-0 end-0 p-2" style="z-index: 11">
        @if(TempData["PostMessage"] != null) {
            <div class="toast" id="toast-area">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["PostMessage"]
                    </div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }

        @if(TempData["FollowMessage"] != null) {
            <div class="toast" id="toast-area">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["FollowMessage"]
                    </div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }

        @if(TempData["PostLike"] != null) {
            <div class="toast" id="toast-area">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["PostLike"]
                    </div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>
</div>