@{
    UserProfileModel CurrentUserProfile = ViewData["CurrentUserProfile"] as UserProfileModel;
    IEnumerable<PostInfoModel> CurrentUserPosts = ViewData["CurrentUserPosts"] as IEnumerable<PostInfoModel>;
}

@{
    ViewData["Title"] = @CurrentUserProfile.UserName + "'s Profile";
}

<h1><span>@User.Identity.Name</span>'s User Profile</h1>

<div class="container-fluid card my-3">
    
    <h3 class="mt-2">Posts</h3>
    <hr class="my-0"/>
    <div class="row justify-content-center my-2 mx-2">
        @{
            if(CurrentUserPosts.Count() != 0) {
                @await Component.InvokeAsync("Posts", CurrentUserPosts)
            } else {
                <div class="card-body my-2">
                    <h5 class="text-center">You have not posted anything yet.</h5>
                </div>
            }
        }
        
    </div>


</div>